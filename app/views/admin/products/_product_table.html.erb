<%- model_class = Product -%>
<table class="white_table table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% sorted_products = products.sort_by {|p| p.name} %>
    <% sorted_products.each do |product| %>
      <tr>
        <td><%= link_to product.name, admin_product_path(store_id: product.store.to_param, id:product.id), :id => "product_link" %></td>
        <td><%= product.description %></td>
        <td><%= amount_in_dollars(product.price) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_product_path(store_id: product.store.to_param, id:product.id), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_product_path(store_id: product.store.to_param, id:product.id),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
          <% if product.retired == false %>
          <%= link_to "Retire", retire_admin_product_path(product.store.slug, product.id),
                      :class => 'btn btn-mini', method: :put, id: "retire_#{product.id}" %>
          <% else %>
          <%= link_to "Unretire", unretire_admin_product_path(product.store.slug, product.id),
                      :class => 'btn btn-mini', method: :put, id: "unretire_#{product.id}" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
